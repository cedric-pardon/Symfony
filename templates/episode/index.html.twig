{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}

{% block body %}
<main class="container">
    <h1 class="text-center">Episode index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="btn btn-secondary p-2 px-4 mb-2" href=""{{ path('episode_show', {slug: episode.slug}) }}>show</a>
                    <a class="btn btn-light p-2 px-4" href="{{ path('episode_edit', {slug: episode.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-dark" href="{{ path('episode_new') }}">Create new</a>
</main>
{% endblock %}
