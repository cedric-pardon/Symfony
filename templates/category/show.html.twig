{% extends "base.html.twig" %}

{% block title %} Catégorie {{ category.name }}{% endblock %}

{% block body %}
<h1 class="text-center">Liste de la catégorie {{ category.name }} : </h1>

<main class="container">
    <div class="row justify-content-center gap-5">
        {% for program in programs %}
        <div class="card bg-light mb-3 mb-5 p-0">
            <div class="card">
                <img class="card-img-top" src="{{program.poster}}" alt="{{ program.title }} poster">
                <div class="card-header">
                    <h2>Résumé :</h2>
                </div>
                <div class="card-body">
                    <h3 class="card-title">{{ program.title }} </h3>
                    <p>{{ program.summary }}</p>
                    <a href="{{ path('program_show', { slug: program.slug }) }}" class="btn btn-secondary p-2 px-4">
                        Voir le détail</a>
                </div>
            </div>
        </div>
        {% else %}
        Aucune catégorie trouvée.
        {% endfor %}
        <a class="text-dark" href="{{ path('category_index') }}">Retour à la liste de la catégorie</a>
    </div>
</main>
{% endblock %}