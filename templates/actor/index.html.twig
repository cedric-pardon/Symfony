{% extends 'base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
<h1 class="text-center">Liste des acteurs :</h1>

<main class="container">
    <div class="row justify-content-center gap-5">
        {% for actor in actors %}
        <div class="card bg-light mb-3 mb-5 p-0">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">{{ loop.index}} - {{ actor.name }}</h2>
                    <a href="{{ path('actor_show', { id: actor.id }) }}" class="btn btn-secondary p-2 px-4">en savoir
                        <a href="{{ path('actor_edit', { id: actor.id }) }}" class="btn btn-dark p-2 px-4">Editer</a>
                </div>
            </div>
        </div>
        {% else %}
        Aucun acteur trouv√©e.
        {% endfor %}
    </div>
    <a class="text-dark" href="{{ path('actor_new') }}">Ajouter new acteur</a>
</main>
{% endblock %}