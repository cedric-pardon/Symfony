{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<h1 class="text-secondary text-center mt-4">Connexion :</h1>
	<div class="container">
		<form class="d-flex flex-column bg-primary align-items-center justify-content-center mt-4" action="{{ path('login') }}" method="post">
			<label class="text-light" for="username">Email :
			</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}"/>

			<label class="text-light" for="password">Mot de passe :
			</label>
			<input type="password" id="password" name="_password"/>

			<input type="hidden" name="_target_path" value="/"/>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn text-light btn-secondary me-4" type="submit">Se connecter</button>
		</form>
		<div class="createAccount">
			<h2 class="text-light">Pas de compte ?</h2>
			<a class="text-light" href="{{ path('app_register') }}">Cr√©er mon compte</a>
		</div>
	</div>
{% endblock %}