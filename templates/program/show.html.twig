{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
    <div class="media-body">
        <h1 class="mt-0">{{ program.title }}</h1>
        <p>{{ program.summary }}</p>
        <p>Catégorie : {{ program.category.name }}</p>
        {% for season in seasons %}
        <h1 class="mt-0">Saison :{{ season.number }}</h1>
        <p>Année :{{ season.year }}</p>
        <p>Description : {{season.description }}</p>
        <a href="{{ path('program_season_show',{programId: season.program.id, seasonId: season.id }) }}">Voir la
            fiche</a>
        {% else %}
        Pas de saison disponible.
        {% endfor %}
    </div>
</div>
<a class="text-secondary" href="{{ path('program_index') }}">Retour à la liste des programmes</a>

{% endblock %}